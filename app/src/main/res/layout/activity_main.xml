<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idTvQuestionAttempted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="number of questions"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textSize="25sp"

        />


    <TextView
        android:id="@+id/idTvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTvQuestionAttempted"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="question"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_below="@id/idTvQuestion"
        >

        <android.widget.Button
            android:id="@+id/idBtOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="option 1"
            android:textAllCaps="false"
            android:background="@color/green"
            android:textColor="@color/white"
            />

        <android.widget.Button
            android:id="@+id/idBtOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="option 2"
            android:textAllCaps="false"
            android:background="@color/green"
            android:textColor="@color/white"
            />

        <android.widget.Button
            android:id="@+id/idBtOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="option 3"
            android:textAllCaps="false"
            android:background="@color/green"
            android:textColor="@color/white"
            />

        <android.widget.Button
            android:id="@+id/idBtOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="option 4"
            android:textAllCaps="false"
            android:background="@color/green"
            android:textColor="@color/white"
            />


    </LinearLayout>

</RelativeLayout>